<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ExactaBetting.App"
             xmlns:converters="clr-namespace:ExactaBetting.App.Converters"
             x:Class="ExactaBetting.App.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:InvertedBoolConverter x:Key="InvertedBool" />
            <converters:CountToBoolConverter x:Key="CountToBool" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
